<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".MusicApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_music"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_music_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreen"
        tools:targetApi="33">
        <activity
            android:name=".ui.PlaylistActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FavouriteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".service.MusicService"
            android:foregroundServiceType="mediaPlayback" />
        <receiver
            android:name="com.example.receiver.MusicBroadcastReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>
    </application>

</manifest>